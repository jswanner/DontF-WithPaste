{
  "background": {
    "scripts": [
      "dfwp.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "clipboard-inactive-32.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "dfwp.js",
        "content.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "description": "Prevents the blocking of copying from & pasting into input fields",
  "homepage_url": "https://github.com/aaronraimist/DontFuckWithPaste",
  "icons": {
    "48": "clipboard-inactive-48.png",
    "128": "clipboard-inactive-128.png"
  },
  "manifest_version": 2,
  "name": "Don't Fuck With Paste",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "version": "2.3.1",
  "applications": {
    "gecko": {
      "id": "DontFuckWithPaste@raim.ist"
    }
  }
}
