{
  "name": "Don't fuck with paste",
  "version": "0.6",
  "manifest_version": 2,
  "description": "Prevents the blocking of pasting into input fields",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://*.facebook.com/*",
        "*://*.google.com/*",
        "*://github.com/*",
        "*://imgur.com/*"
      ],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}
